generator client {
  provider = "prisma-client-js"
  output   = "../src/lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  password    String // Hashed password
  displayName String?
  imageUrl    String?
  timezone    String? // e.g. "Asia/Kolkata"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // relations
  sources     Source[]
  documents   Document[]
  tasks       Task[]
  reminders   Reminder[]
  queries     QueryLog[]
  oauthTokens OAuthToken[]
  audits      AuditLog[]
  fileUploads FileUpload[]

  @@index([email])
}

model Source {
  id             Int       @id @default(autoincrement())
  userId         Int
  provider       String // e.g. "gmail", "drive", "notion", "upload"
  providerId     String? // remote account id / email
  displayName    String?
  config         Json? // provider-specific config (scopes, folder ids)
  encryptedToken String? // encrypted refresh token / token blob
  connectedAt    DateTime?
  createdAt      DateTime  @default(now())

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  documents   Document[]
  oauthTokens OAuthToken[]

  @@index([userId, provider])
}

model Document {
  id        Int      @id @default(autoincrement())
  userId    Int
  sourceId  Int? // null for direct uploads
  title     String
  docType   String // "pdf", "txt", "md", "email"
  s3Path    String // S3 / MinIO key
  size      Int?
  language  String? // guessed language
  hash      String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  chunks Chunk[]

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  source Source? @relation(fields: [sourceId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([sourceId])
  @@index([createdAt])
}

model Chunk {
  id          Int      @id @default(autoincrement())
  documentId  Int
  userId      Int
  text        String   @db.Text // possibly large
  chunkHash   String   @unique
  startPos    Int? // character index in document
  endPos      Int?
  tokenCount  Int?
  embeddingId Int? // FK to Embedding.id
  createdAt   DateTime @default(now())

  document  Document   @relation(fields: [documentId], references: [id], onDelete: Cascade)
  embedding Embedding?

  @@index([documentId])
  @@index([userId])
}

model Embedding {
  id        Int      @id @default(autoincrement())
  chunkId   Int      @unique
  model     String? // e.g. "text-embedding-3-large" / provider
  vectorRef String? // pointer/id in Qdrant/Pinecone (e.g. "collection:id")
  metadata  Json? // any associated metadata (score, extra)
  createdAt DateTime @default(now())

  chunk Chunk @relation(fields: [chunkId], references: [id], onDelete: Cascade)

  @@index([model])
}

model Task {
  id          Int       @id @default(autoincrement())
  userId      Int
  title       String
  description String?
  dueAt       DateTime?
  completed   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, dueAt])
}

model Reminder {
  id        Int      @id @default(autoincrement())
  userId    Int
  text      String
  remindAt  DateTime
  sent      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, remindAt])
}

model QueryLog {
  id         Int      @id @default(autoincrement())
  userId     Int
  query      String   @db.Text
  response   String?  @db.Text
  usedChunks String? // JSON list of chunk ids or metadata
  latencyMs  Int?
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model OAuthToken {
  id           Int       @id @default(autoincrement())
  userId       Int
  sourceId     Int?
  provider     String // "google", "microsoft", etc
  refreshToken String // encrypted
  accessToken  String? // optionally store (encrypted)
  scope        String?
  expiry       DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  source Source? @relation(fields: [sourceId], references: [id], onDelete: SetNull)

  @@index([userId, provider])
}

model FileUpload {
  id        Int      @id @default(autoincrement())
  userId    Int
  filename  String
  s3Path    String
  size      Int?
  mimeType  String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int?
  action    String // e.g. "upload", "delete", "sync_gmail"
  details   Json?
  ip        String?
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
}
